@model User
@{
    Layout = "_MeetingLayout";
}

@section Styles {
    <link href="~/css/preview.css" rel="stylesheet" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

<div class="preview-page">

    <div class="preview-left-side">
        <video class="video" id="previewCamera"></video>

        <div class="preview-audio-video-buttons">
            <button id="micButton" onclick="togglePreviewMic()"><i class="fas fa-microphone"></i></button>

            <button id="camButton" onclick="togglePreviewCamera()"><i class="fas fa-video"></i></button>
        </div>
    </div>

    <div class="preview-right-side">

        <div class="create-meeting-input-fields">
            <form asp-action="Meeting" asp-controller="Meeting" method="post">
                <input type="submit" value="Create a meet" class="create-new-meet"/>
            </form>

            <button onclick="showJoinMeetingInputFields()" class="join-a-meet">Join a Meet</button>
        </div>
        <div class="join-meeting-input-fields">

            <form asp-action="Meeting" asp-controller="Meeting" method="post">
                <input type="text" name="meetingId" placeholder="Enter Meeting Code" />

                <input type="text" name="hostName" readonly value="@Model.UserName" />

                <input type="submit" value="Join a meet" />
            </form>

            <button onclick="backToCreateJoin()" class="back-button">⬅ Back</button>

        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>

    <script src="https://sdk.videosdk.live/js-sdk/0.0.82/videosdk.js"></script>

    <script src="~/js/preview.js" asp-append-version="true"></script>
}